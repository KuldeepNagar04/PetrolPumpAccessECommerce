<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuldeep.firststep">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon0"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddNewAddressActivity" />
        <activity android:name=".AddressBookActivity"/>
        <activity android:name=".AddressRefreshActivity"/>
        <activity android:name=".MyAccountActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".HomeActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".OrderPlacedActivity" />
        <activity android:name=".AllProductActivity" />
        <activity android:name=".CategoryProducts" />
        <activity android:name=".ProductDescriptionActivity" />
        <activity android:name=".SetProfileActivity" />
        <activity android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity android:name=".SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>